#!/bin/bash

DEFAULTTEMP=4200

ICONIMG=""
ICONLOC="/tmp/redflux.png"

NOTIFYCOMMAND="notify-send"
NOTIFYARGS="-a RedFlux -t 500 --icon=$ICONLOC"
NOTIFICATIONS=1

ACTION="$1"
CONFDIR="/tmp"
CURRFILE="$CONFDIR/.redflux_currtemp_$USER"
CURRDISFILE="$CONFDIR/.redflux_disabled_$USER"
UPDFILE="$CONFDIR/.redflux_update_$USER"

callredshift() {
	redshift -PO $1
	writeupdate
}

writeupdate() {
	echo $RANDOM > $UPDFILE
}

notification() {
	if [[ $NOTIFICATIONS -eq 1 ]]
	then
		if which $NOTIFYCOMMAND 2>/dev/null 1>/dev/null
		then
			$NOTIFYCOMMAND "$1 - RedFlux" $NOTIFYARGS
		else
			echo "$NOTIFYCOMMAND not found! Install or add '--no-notifications' key to hide warning!"
		fi
	fi
	echo "$1"
}

CURRTEMP=$(cat $CURRFILE)

for var in "$@"
do
		if [[ $var = "--notifications" ]]
		then
			NOTIFICATIONS=1
		elif [[ $var = "--no-notifications" ]]
		then
			NOTIFICATIONS=0
		fi
done

if ! [[ -f $ICONLOC ]]
then
	echo "$ICONIMG" | base64 -d > "$ICONLOC"
fi
#echo $CURRTEMP
if [[ $CURRTEMP = "" ]]
	then
	echo "Not configured, setting to "$DEFAULTTEMP"K..."
	CURRTEMP=$DEFAULTTEMP
	echo $DEFAULTTEMP > $CURRFILE
	callredshift $DEFAULTTEMP
fi

if [[ $ACTION != "getinfo" ]]
then
echo "Current temp: "$CURRTEMP"K"
fi

#echo $ACTION
if [[ $ACTION = "init" ]]
then
	echo "Initialiazing..."
	echo $DEFAULTTEMP > $CURRFILE
	callredshift $DEFAULTTEMP
	exit 0

elif [[ $ACTION = "reset" ]]
then
	echo "Resetting to "$DEFAULTTEMP"K..."
	notification "Temp resetted to "$DEFAULTTEMP"K!"
	echo $DEFAULTTEMP > $CURRFILE
	callredshift $DEFAULTTEMP
	exit 0

elif [[ $ACTION = "disable" ]]
then 
	echo "Disabling..."
	callredshift 6500
	touch $CURRDISFILE
	exit 0
elif [[ $ACTION = "enable" ]]
then 
	echo "Enabling..."
	callredshift $CURRTEMP
	rm -f $CURRDISFILE
	exit 0

elif [[ $ACTION = "toggle" ]]
then 
	if [ -f $CURRDISFILE ]
	then
		echo "Enabling..."
		notification "RedFlux enabled!"
		callredshift $CURRTEMP
		rm -f $CURRDISFILE
		exit 0
	else
		echo "Disabling..."
		notification "RedFlux disabled!"
		callredshift 6500
		touch $CURRDISFILE
		exit 0
	fi


elif [[ $ACTION = "set" ]]
then 
	if ! echo "$2" | grep [^0-9+\-] -q
	then
		CURRTEMP=$2
		if (( "$CURRTEMP" < 1000 )) || (("$CURRTEMP" > 25000))
		then
			echo "Out of range!"
			exit 1
		fi
        	echo "Setting" "$CURRTEMP""K..."
		echo $CURRTEMP > $CURRFILE
		callredshift $CURRTEMP
		echo "Set at "$CURRTEMP"K!"
		notification "Temp set at "$CURRTEMP"K!"
		exit 0
	else
		echo "Wrong syntax!"
		exit 1
	fi

elif [[ $ACTION = "getinfo" ]]
then 
	SUBACTION="$2"
	if [[ $SUBACTION = "currtemp" ]]
	then
		echo $CURRTEMP
		exit 0
	elif [[ $SUBACTION = "defaulttemp" ]]
	then
		echo $DEFAULTTEMP
		exit 0
	elif [[ $SUBACTION = "state" ]]
	then
		if [ -f $CURRDISFILE ]
		then
			echo "Disabled"
			exit 0
		else
			echo "Enabled"
			exit 0
		fi
	elif [[ $SUBACTION = "updfile" ]]
	then
		echo $UPDFILE
	else
		echo "Wrong syntax!"
		exit 1
	fi


elif [[ $ACTION = "" ]]
then
	echo ""
	echo "ControlShift is wrapper to simplify control of RedShift from scripts or CLI"
	echo ""
	echo "Actions:"
	echo "enable: turns redshift on"
	echo "disable: turns redshift off"
	echo "reset: resets redshift to "$DEFAULTTEMP"K"
	echo "init: same as reset, but without notification"
	echo "toggle: turns it on or off depending on current state"
	echo "set <TEMP>: sets current temp to value <TEMP>"
	echo "or enter value to add to current temp (negative to substract)"
	exit 0
elif ! echo "$ACTION" | grep [^0-9+\-] -q
then
	echo "Modyfing ""$ACTION""K..."
	CURRTEMP=$(($CURRTEMP + $ACTION))
	if (( "$CURRTEMP" < 1000 )) || (("$CURRTEMP" > 25000))
	then
		echo "Out of range!"
		exit 1
	fi
	echo $CURRTEMP > $CURRFILE
	callredshift $CURRTEMP
	echo "Set at "$CURRTEMP"K!"
	notification "Temp set at "$CURRTEMP"K!"
	exit 0
else
	echo "Wrong syntax!"
	exit 1
fi


